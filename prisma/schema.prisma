// 4. ENGAGEMENT FEATURES

model inventory_alerts {
  id              String   @id @default(cuid())
  customerEmail   String
  customerName    String?
  vehicleMake     String?
  vehicleModel    String?
  maxPrice        Int?
  minYear         Int?
  maxMileage      Int?
